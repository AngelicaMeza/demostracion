<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_company_secondary_currency_form" model="ir.ui.view">
        <field name="name">view.company.secondary.currency.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="second_currency_id" options="{'no_create': True, 'no_open': True}" readonly="1" />
            </field>
        </field>
    </record>

</odoo>
